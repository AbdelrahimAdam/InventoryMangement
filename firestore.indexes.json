// Run once to migrate all items to English field names
const migrateItems = async () => {
  const snapshot = await getDocs(collection(db, 'items'));
  const batch = writeBatch(db);
  
  snapshot.docs.forEach(doc => {
    const data = doc.data();
    const englishData = {
      name: data.الاسم || data.name,
      code: data.الكود || data.code,
      color: data.اللون || data.color,
      warehouse_id: data.المخزن_id || data.warehouse_id,
      // ... convert all fields
    };
    batch.update(doc.ref, englishData);
  });
  
  await batch.commit();
  console.log('Migration complete!');
};